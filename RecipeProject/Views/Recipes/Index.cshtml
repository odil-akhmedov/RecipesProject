@*@model IEnumerable<RecipeProject.Recipe>*@
@model PagedList.IPagedList<RecipeProject.Recipe> 
@using PagedList.Mvc; 
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Recipes List";
}

<h2>Recipes List</h2>

<p>
    @Html.ActionLink("Create New Recipe", "Create")
</p>
@using (Html.BeginForm("Index", "Recipes", FormMethod.Get))
{
    <p>
        Find by recipe name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p> 
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Recipe Name", "Index", new { sortOrder = ViewBag.TitleSortParm })
        </th>
        <th>
            Ingredients
        </th>
        <th>
            @*@Html.ActionLink("Directions", "Index", new { sortOrder = ViewBag.DirectionsSortParm })*@
            Directions
        </th>
        <th>
            @Html.ActionLink("Preparation Time", "Index", new { sortOrder = ViewBag.PrepTimeSortParm })
        </th>
        <th>
            @Html.ActionLink("Cooking Time", "Index", new { sortOrder = ViewBag.CookingTimeSortParm })
        </th>
        <th>
            @Html.ActionLink("# of servings", "Index", new { sortOrder = ViewBag.NOSSortParm })
        </th>
        <th>
            Creator
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingridients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Directions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prep_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cooking_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfServings)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.ImgSrc)*@

                <img src="@item.ImgSrc" alt="@item.Title" width="100" height="100">
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <br/>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) <br/>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })<br />
            </td>
        </tr>
    }

</table>
<br /> Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
