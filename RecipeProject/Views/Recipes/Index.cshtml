@model IEnumerable<RecipeProject.Recipe>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.ActionLink("Recipe Name", "Index", new { sortOrder = ViewBag.TitleSortParm })
        </th>
        <th>
            @Html.ActionLink("Ingredients", "Index", new { sortOrder = ViewBag.IngridientSortParm })
        </th>
        <th>
            @Html.ActionLink("Directions", "Index", new { sortOrder = ViewBag.DirectionsSortParm })
        </th>
        <th>
            @Html.ActionLink("Preparation Time", "Index", new { sortOrder = ViewBag.PrepTimeSortParm })
        </th>
        <th>
            @Html.ActionLink("Cooking Time", "Index", new { sortOrder = ViewBag.CookingTimeSortParm })
        </th>
        <th>
            @Html.ActionLink("# of servings", "Index", new { sortOrder = ViewBag.NOSSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.FirstName)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingridients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Directions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prep_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cooking_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfServings)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
